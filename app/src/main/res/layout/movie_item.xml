<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_movie_pic"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:src="@mipmap/pic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="1、肖申克的救赎"
            android:textColor="#F0F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_movie_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="导演: 弗兰克·德拉邦特 Frank Darabont" />

        <TextView
            android:id="@+id/tv_movie_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="主演: 蒂姆·罗宾斯 Tim Robbins" />

        <TextView
            android:id="@+id/tv_movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1994 / 美国 / 犯罪 剧情" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_movie_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="9.6"
        android:textColor="#F00"
        android:textSize="35sp" />
</LinearLayout>